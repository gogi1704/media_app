    <TextView
        android:id="@+id/text_name_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="3 sentyabrya"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_play"
        app:layout_constraintStart_toEndOf="@id/image_play"
        app:layout_constraintTop_toTopOf="@+id/image_play" />

    <TextView
        android:id="@+id/name_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="album_name"
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/text_name_music"
        app:layout_constraintStart_toEndOf="@id/text_name_music"
        app:layout_constraintTop_toTopOf="@id/text_name_music" />

